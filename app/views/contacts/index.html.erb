<!DOCTYPE html>
<h1>Contacts</h1>

<%= link_to "New Contact", new_contact_path, class: "btn btn-primary" %>

<table>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
    </tr>

    <% @contacts.each do |contact| %>
    <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td>
            <%= link_to "View", contact_path(contact) %> |
            <%= link_to "Edit", edit_contact_path(contact) %> |
          <%= button_to "Delete", contact_path(contact), method: :delete, data: { confirm: "Are you sure?" } %>

        </td>
    </tr>
    <% end %>
</table>
